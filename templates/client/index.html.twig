{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}
    <h1>Client index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom Entreprise</th>
                <th>Responsable</th>
                <th>Adresse de Livraison</th>
                <th>Adresse de Facturation</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.NomEntreprise }}</td>
                <td>{{ client.Responsable }}</td>
                <td>{{ client.AdressedeLivraison }}</td>
                <td>{{ client.AdressedeFacturation }}</td>
                <td>{{ client.Telephone }}</td>
                <td>{{ client.Email }}</td>
                <td>
                    <a href="{{ path('client_show', {'id': client.id}) }}">show</a>
                    <a href="{{ path('client_edit', {'id': client.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('client_new') }}">Create new</a>
{% endblock %}
