{% extends 'base.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
<div class="bg-light p-3">
    <h1>Commande index</h1>
</div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numcom</th>
                <th>Produit</th>
                <th>Date</th>
                <th>Tht</th>
                <th>Ttva</th>
                <th>Tttc</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.numcom }}</td>
                <td>{{ commande.produit }}</td>
                <td>{{ commande.date ? commande.date|date('Y-m-d') : '' }}</td>
                <td>{{ commande.tht }}</td>
                <td>{{ commande.ttva }}</td>
                <td>{{ commande.tttc }}</td>
                <td>
                    <a href="{{ path('commande_show', {'id': commande.id}) }}">show</a>
                    <a href="{{ path('commande_edit', {'id': commande.id}) }}">edit</a>
                    {# <a href="{{path('commande_remove', { 'id' : commande.id})}}" class="btn btn-danger btn-sm"></a> #}
                        <i class="fas fa-trash"></i>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
       
    </table>



    <a href="{{ path('commande_new') }}">Create new</a>
{% endblock %}
