{% extends 'base.html.twig' %}

{% block title %}Liste des Produits d'Entretiens{% endblock %}

{% block monTitre %}Details du Produit {{produit.description }} {% endblock %}
{% block body %}
<div class="row no-gutters">
  
        <div class="col-10 col-lg-6 p-1">
            <div class="card mb-3">
                <div class="row no-gutters align-items-center p-2">
               
                    <div class="col-12 col-md-4">
                      <img src="{{asset('images/entretiens/' ~ produit.image)}}" class="card-img">       
                     </div>
                    <div class="col">
                        <div class="card-body">
                            <h5 class="card-title">{{produit.description}}</h5>
                            <p class="card-text">
                                <div>Marque : {{produit.modeleprod.marqueprod.libelle}}</div>
                                <div>Type : {{produit.modeleprod.utilisation}} </div>

                                <div>Couleur : {{produit.modeleprod.couleur}}</div>
                                <div>Prix : {{produit.prix}}â‚¬</div>
                                
                            </p>
                        </div>
                        
                    </div>
                    
                </div>
                 
           
                
            </div>
        </div>
 
</div>

{% endblock %}
