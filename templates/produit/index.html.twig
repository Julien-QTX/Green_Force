{% extends 'base.html.twig' %}

{% block title %}Produits d'entretien{% endblock %}

{% block body %}
    <div class="container-fluid">
   <div class="row justify-content-md-center">
       <div class="col-md-12 entr row justify-content-center"><div class="col-md-3 title">
 </div>
    </div>
</div>
<br>
<section>
<div class="container-fluid">
    <div class="row col-md-12 justify-content-center gen">
    <div class="col-md-10 gen cadri">
    <h1><p class="textf">{{ categorie }}<p></h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Description</th>
                <th>Image</th>
                {% if is_granted('ROLE_ADMIN') %}
                     <th>Pa</th>
                {% endif %}
                <th>Pv</th>
                <th>Tva</th>
                <th>Stock</th>
                <th>Categorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.libelle }}</td>
                <td>{{ produit.description }}</td>
                <td><img src="{{asset('images/post/')}}{{ produit.image }}" style="width:75px;max-height:75px;"></td>
                {% if is_granted('ROLE_ADMIN') %}
                    <td>{{ produit.pa }}</td>
                {% endif %}
                <td>{{ produit.pv }}</td>
                <td>{{ produit.tva }}</td>
                <td>{{ produit.stock }}</td>
                <td>{{ produit.categorie }}</td>
                <td>
               {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('produit_show', {'id': produit.id}) }}">Voir</a>
                    <a href="{{ path('produit_edit', {'id': produit.id}) }}">Modifier</a>
                {% endif %}
                    
                     <a href="{{path('cart_add', {'id': produit.id })}}" class="btn btn-success float-right">
                        <i class="fa fa-shopping-cart"></i>
                        Ajouter
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Pas d'articles pour le moment</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('produit_new') }}"><p class="textf">Cr√©er un nouveau article<p></a>
    {% endif %}
    </div>   
    </div>   
    </div> 
    <br>
{% endblock %}
