{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<div class="bg-light p-3">
    <h1>Votre Panier</h1>
</div>
{% if items | length > 0 %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>nomcom</th>
                <th>pv</th>
            </tr>
        </thead>
        <tbody>
       {% for item in items %}
            <tr>
                <td>{{ item.product.commande.id }}</td>
                <td>{{ item.product.commande.numcom }}</td>
                <td>{{ item.product.commande.Tttc }}</td>
                <td>
                    <a href="{{ path('commande_show', {'id': item.product.commande.id}) }}">show</a>
                    <a href="{{ path('cart_add', {'id': item.product.commande.id}) }}">edit</a>
                    <a href="{{path('cart_remove', { 'id' : item.product.commande.id})}}" class="btn btn-danger btn-sm"></a>
                        <i class="fas fa-trash"></i>
                </td>
            </tr>
        
        {% endfor %}
        </tbody>
         <tfoot>
                    <tr>
                        <td colspan="3" class="text-right">Total :</td>
                        <td >{{ total }}</td>
                        <td ></td>

                    </tr>

            </tfoot>
    </table>


  {%  endif %}
  <a href="{{ path('cart_index') }}">back to list</a>  
{% endblock %}
